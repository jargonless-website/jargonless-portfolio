services:
  api:
    build:
      context: ../../apps/api
    image: jargonless/api:week0
    container_name: jl_api_week0
    ports:
      - "8000:8000"
    networks: [webnet]
    healthcheck:
      test: ["CMD", "wget", "-qO-", "http://localhost:8000/api/health"]
      interval: 10s
      timeout: 3s
      retries: 5
    environment:
      PORTFOLIO_ENV: ${PORTFOLIO_ENV:-development}
      DOMAIN: ${DOMAIN:-localhost}

  nginx:
    image: nginx:alpine
    container_name: jl_nginx_week0
    depends_on:
      api:
        condition: service_healthy
    ports:
      - "80:80"
    volumes:
      - ../nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ../nginx/html:/usr/share/nginx/html:ro
    networks: [webnet]
    environment:
      PORTFOLIO_ENV: ${PORTFOLIO_ENV:-development}
      DOMAIN: ${DOMAIN:-localhost}

networks:
  webnet: {}