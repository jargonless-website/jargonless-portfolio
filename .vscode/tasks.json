{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vite:dev",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/apps/web" },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^(\\S+):(\\d+):(\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE v\\d+\\.\\d+\\.\\d+",
          "endsPattern": "Local:\\s+http://localhost:5173/?"
        }
      },
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "focus": false
      }
    },
    {
      "label": "vite:stop",
      "type": "shell",
      "command": "npm run stop",
      "options": { "cwd": "${workspaceFolder}/apps/web" },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true,
        "focus": false
      }
    }
  ]
}
